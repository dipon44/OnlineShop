


@model OnlineShop.Models.Product.ProductTag;

@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Product Tag Details</h2>

<form asp-controller="ProductTag" asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTagName">

                </label>
            </div>
            <div class="col-5">
                <input asp-for="ProductTagName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductTagName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="ProductTags" class="btn btn-success">Back to List</a>
            @*<input type="submit" class="btn btn-success" value="Back to List" />*@
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationscriptsPartial");}
}


