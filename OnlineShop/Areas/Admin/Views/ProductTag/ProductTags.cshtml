@using OnlineShop.Models
@model IEnumerable<OnlineShop.Models.Product.ProductTag>
@{
    ViewData["Title"] = "ProductTag";
}
<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">ProductTag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Product Tag </a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.ProductTagName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductTagName</td>
                <td>
                    <partial name="_buttonPartialforProductTag" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

@section scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">

    </script>
}

